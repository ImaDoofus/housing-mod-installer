{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        ".prettierignore": true,
        "jsconfig.json": true,
        ".npmrc": true,
        ".eslintrc.cjs": true,
        ".eslintignore": true
    },
    "hide-files.files": [
        ".prettierignore",
        "jsconfig.json",
        ".npmrc",
        ".eslintrc.cjs",
        ".eslintignore"
    ],
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[svelte]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.documentSelectors": [
        "**/*.svelte"
    ]
}